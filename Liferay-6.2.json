{
	"jpsVersion": "0.2",
	"jpsType": "install",
	"application": {
		"id": "liferay",
		"name": "Liferay",
		"version": "6.2",
		"logo": "https://raw.githubusercontent.com/JelasticJPS/Liferay/master/images/liferay.png",
		"type": "java",
		"homepage": "http://www.liferay.com/",
		"categories": [
				"apps/cms"
		],
		"description": {
			"en": "<p>Liferay Portal is an enterprise web platform for building business solutions that deliver immediate results and long-term value.</p>"
		},
		"env": {
			"topology": {
				"ha": false,
				"engine": "java7",
				"ssl": false,
				"nodes": [{
						"extip": false,
						"count": 1,
						"cloudlets": 16,
						"nodeType": "tomcat7"
					}, {
						"extip": false,
						"count": 1,
						"cloudlets": 8,
						"nodeType": "mysql5"
					}
				]
			},
			"upload": [{
					"nodeType": "tomcat7",
					"sourcePath": "https://raw.githubusercontent.com/JelasticJPS/Liferay/master/libs/mysql-connector-java-5.1.23-bin.jar",
					"destPath": "${SERVER_WEBROOT}/ROOT/WEB-INF/lib/mysql-connector-java-5.1.23.jar"
				}, {
					"nodeType": "tomcat7",
					"sourcePath": "https://raw.githubusercontent.com/JelasticJPS/Liferay/master/libs/portal-service.jar",
					"destPath": "${SERVER_LIBS}/portal-service.jar"
				}, {
					"nodeType": "tomcat7",
					"sourcePath": "https://raw.githubusercontent.com/JelasticJPS/Liferay/master/libs/hsql.jar",
					"destPath": "${SERVER_LIBS}/hsql.jar"
				}, {
					"nodeType": "tomcat7",
					"sourcePath": "https://raw.githubusercontent.com/JelasticJPS/Liferay/master/libs/portlet.jar",
					"destPath": "${SERVER_LIBS}/portlet.jar"
				}, {
					"nodeType": "tomcat7",
					"sourcePath": "https://raw.githubusercontent.com/JelasticJPS/Liferay/master/libs/activation.jar",
					"destPath": "${SERVER_LIBS}/activation.jar"
				}, {
					"nodeType": "tomcat7",
					"sourcePath": "https://raw.githubusercontent.com/JelasticJPS/Liferay/master/libs/ccpp.jar",
					"destPath": "${SERVER_LIBS}/ccpp.jar"
				}, {
					"nodeType": "tomcat7",
					"sourcePath": "https://raw.githubusercontent.com/JelasticJPS/Liferay/master/libs/jms.jar",
					"destPath": "${SERVER_LIBS}/jms.jar"
				}, {
					"nodeType": "tomcat7",
					"sourcePath": "https://raw.githubusercontent.com/JelasticJPS/Liferay/master/libs/jta.jar",
					"destPath": "${SERVER_LIBS}/jta.jar"
				}, {
					"nodeType": "tomcat7",
					"sourcePath": "https://raw.githubusercontent.com/JelasticJPS/Liferay/master/libs/jtds.jar",
					"destPath": "${SERVER_LIBS}/jtds.jar"
				}, {
					"nodeType": "tomcat7",
					"sourcePath": "https://raw.githubusercontent.com/JelasticJPS/Liferay/master/libs/jutf7.jar",
					"destPath": "${SERVER_LIBS}/jutf7.jar"
				}, {
					"nodeType": "tomcat7",
					"sourcePath": "https://raw.githubusercontent.com/JelasticJPS/Liferay/master/libs/mail.jar",
					"destPath": "${SERVER_LIBS}/mail.jar"
				}, {
					"nodeType": "tomcat7",
					"sourcePath": "https://raw.githubusercontent.com/JelasticJPS/Liferay/master/libs/persistence.jar",
					"destPath": "${SERVER_LIBS}/persistence.jar"
				}, {
					"nodeType": "tomcat7",
					"sourcePath": "https://raw.githubusercontent.com/JelasticJPS/Liferay/master/libs/junit-4.10.jar",
					"destPath": "${SERVER_LIBS}/junit-4.10.jar"
				}, {
					"nodeType": "tomcat7",
					"sourcePath": "https://raw.githubusercontent.com/JelasticJPS/Liferay/master/libs/portal-ext.properties.txt",
					"destPath": "${HOME}/portal-ext.properties"
				}
			],
			"deployments": [{
					"archive": "https://media.githubusercontent.com/media/JelasticJPS/Liferay/master/dumps/liferay-portal-6.2-ce-ga4-20150416163831865.war",
					"name": "liferay-portal-6.2-ce-ga4-20150416163831865.war",
					"context": "ROOT"
				}
			],
			"configs": [{
					"nodeType": "mysql5",
					"database": {
						"name": "lportal",
						"user": "liferay",
						"dump": "https://raw.githubusercontent.com/JelasticJPS/Liferay/master/dumps/lportal.sql"
					}
				}, {
					"nodeType": "tomcat7",
					"path": "${HOME}/portal-ext.properties",
					"restart": true,
					"replacements": [{
							"pattern": "jdbc\\.default\\.url\\s*=\\s*.*",
							"replacement": "jdbc.default.url=jdbc:mysql://${nodes.mysql5.address}/${nodes.mysql5.database.name}"
						}, {
							"pattern": "jdbc\\.default\\.username\\s*=\\s*.*",
							"replacement": "jdbc.default.username=${nodes.mysql5.database.user}"
						}, {
							"pattern": "jdbc\\.default\\.password\\s*=\\s*.*",
							"replacement": "jdbc.default.password=${nodes.mysql5.database.password}\ninclude-and-override=${user.home}/liferay/portal-setup-wizard.properties"
						}
					]
				}, {
					"nodeType": "tomcat7",
					"path": "${SERVER_CONF}/server.xml",
					"replacements": [{
							"pattern": "connectionTimeout=\"20000\"",
							"replacement": "connectionTimeout=\"700000\""
						}, {
							"pattern": "redirectPort=\"443\"",
							"replacement": "redirectPort=\"443\"  URIEncoding=\"UTF-8\""
						}
					]
				}, {
					"restart": true,
					"nodeType": "tomcat7",
					"path": "${SERVER_CONF}/catalina.properties",
					"replacements": [{
							"pattern": "common.loader=.*",
							"replacement": "common.loader=${catalina.base}/lib,${catalina.base}/lib/*.jar,${catalina.home}/lib,${catalina.home}/lib/*.jar,${catalina.base}/lib/ext,${catalina.base}/lib/ext/*.jar,${catalina.base}/lib/ext,${catalina.base}/lib/ext/*.jar,${catalina.home}/lib,${catalina.home}/lib/*.jar,${catalina.home}/webapps/ROOT/WEB-INF/lib/*.jar"
						}
					]
				}
			]
		},
		"success": {
			"text": "Please enter your new admin email, name and password</br></br>To add custom domain name for your Liferay installation follow the steps described in our <a href='http://docs.jelastic.com/custom-domains' target='_blank'>documentation</a>"
		}
	}
}